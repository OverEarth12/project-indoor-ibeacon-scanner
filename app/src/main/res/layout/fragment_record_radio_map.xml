<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".recordRadioMap">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/rssitouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save RSSI from Found Beacon"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:autoSizeTextType="uniform"
            android:text="input_x"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextPosX"
            android:layout_width="312dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="pls type Number 0-9"
            android:importantForAutofill="no"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:autoSizeTextType="uniform"
            android:text="input_y"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editTextPosY"
            android:layout_width="314dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="pls type Number 0-9"
            android:importantForAutofill="no"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rssi"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:autoSizeTextType="uniform"
            android:text="RSSI"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editRssi"
            android:layout_width="314dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="Enter your calculated RSSi"
            android:importantForAutofill="no"
            android:inputType="number" />

    </LinearLayout>

    <EditText
        android:id="@+id/roomId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Room"
        android:inputType="textShortMessage" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

</LinearLayout>